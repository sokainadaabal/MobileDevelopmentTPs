<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.CalculatorProject" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/BtnbagrounfColor2</item>
        <item name="colorPrimaryVariant">@color/BtnbagrounfColor2</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>
    <!-- Ajouter votre style a appliquer dans votre application-->
    <style name="operation" parent="buttonSize">
        <item name="android:text">@color/BtnbagrounfColor</item>
    </style>
    <style name="digitButton" parent="buttonSize">
        <item name="android:textColor">@color/black</item>
    </style>
    <style name="buttonSize" parent="Widget.MaterialComponents.ExtendedFloatingActionButton">
        <item name="backgroundTint">@color/white</item>
        <item name="android:layout_width">70dp</item>
        <item name="cornerRadius">32dp</item>
        <item name="android:textSize">30dp</item>
        <item name="android:layout_height">70dp</item>
        <item name="android:layout_margin">12dp</item>
    </style>
</resources>