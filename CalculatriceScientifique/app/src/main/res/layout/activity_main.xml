<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#000000"
    tools:context=".MainActivity">

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        app:layout_constraintStart_toStartOf="parent">

        <TextView
            android:id="@+id/Affichage"
            android:orientation="@+id/linearLayout"
            android:layout_width="match_parent"
            android:layout_height="57dp"
            android:layout_marginTop="50dp"
            android:layout_marginRight="12sp"
            android:layout_marginBottom="140dp"
            android:background="#000000"
            android:maxLines="1"
            android:textAlignment="viewEnd"
            android:textColor="#FFFFFF"
            android:textSize="26dp" />

        <View
            android:id="@+id/line"
            android:orientation="@+id/linearLayout"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/lineColor"
            app:layout_constraintBottom_toTopOf="@+id/buttons_layout" />

        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@android:color/background_dark"
            android:shrinkColumns="*"
            android:orientation="@+id/linearLayout"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:stretchColumns="*">

            <TableRow
                android:orientation="@+id/linearLayout"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="80dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">

                    <Button
                        android:id="@+id/btn_7"
                        style="@style/DigitBtnStyle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="12dp"
                        android:backgroundTint="@color/white"
                        android:text="7"
                        android:textColor="#000"
                        android:textSize="30sp"
                        app:cornerRadius="15sp" />

                    <Button
                        android:id="@+id/btn_8"
                        style="@style/DigitBtnStyle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="12dp"
                        android:backgroundTint="@color/white"
                        android:text="8"
                        android:textColor="@color/black"
                        android:textSize="30sp"
                        app:cornerRadius="15sp" />

                    <Button
                        android:id="@+id/btn_9"
                        style="@style/DigitBtnStyle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="12dp"
                        android:backgroundTint="@android:color/background_light"
                        android:text="9"
                        android:textColor="#000"
                        android:textColorLink="@color/white"
                        android:textSize="30sp"
                        app:cornerRadius="15sp" />

                    <Button
                        android:id="@+id/btn_dive"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:onClick="setOperateur"
                        android:text="/"
                        android:textColor="#FFF"
                        android:textSize="30sp"
                        app:cornerRadius="15sp" />

                </LinearLayout>

            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">
                    <Button
                        android:id="@+id/btn_4"
                        style="@style/DigitBtnStyle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="12dp"
                        android:backgroundTint="@color/white"
                        android:text="4"
                        android:textColor="#000"
                        android:textSize="30sp"
                        app:cornerRadius="15sp" />

                    <Button
                        android:id="@+id/btn_5"
                        style="@style/DigitBtnStyle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="12dp"
                        android:backgroundTint="@color/white"
                        android:text="5"
                        android:textColor="#000"
                        android:textSize="30sp"
                        app:cornerRadius="15sp" />

                    <Button
                        android:id="@+id/btn_6"
                        style="@style/DigitBtnStyle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="12dp"
                        android:backgroundTint="@color/white"
                        android:text="6"
                        android:textColor="#000"
                        android:textSize="30sp"
                        app:cornerRadius="15sp" />

                    <Button
                        android:id="@+id/btn_multipe"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:onClick="setOperateur"
                        android:text="*"
                        android:textColor="#FFF"
                        android:textSize="30sp"
                        app:cornerRadius="15sp" />

                </LinearLayout>

            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">

                    <Button
                        android:id="@+id/btn_1"
                        style="@style/DigitBtnStyle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="12dp"
                        android:backgroundTint="@color/white"
                        android:text="1"
                        android:textColor="#000"
                        android:textSize="30sp"
                        app:cornerRadius="15sp" />

                    <Button
                        android:id="@+id/btn_2"
                        style="@style/DigitBtnStyle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="12dp"
                        android:backgroundTint="@color/white"
                        android:text="2"
                        android:textColor="#000"
                        android:textSize="30sp"
                        app:cornerRadius="15sp" />

                    <Button
                        android:id="@+id/btn_3"
                        style="@style/DigitBtnStyle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="12dp"
                        android:backgroundTint="@color/white"
                        android:text="3"
                        android:textColor="#000"
                        android:textSize="30sp"
                        app:cornerRadius="15sp" />

                    <Button
                        android:id="@+id/btn_st"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:onClick="setOperateur"
                        android:text="-"
                        android:textColor="#FFF"
                        android:textSize="30sp"
                        app:cornerRadius="15sp" />

                </LinearLayout>

            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <LinearLayout
                    android:layout_width="400dp"
                    android:layout_height="match_parent"

                    android:orientation="horizontal">

                    <Button
                        android:id="@+id/btn_0"
                        style="@style/DigitBtnStyle"
                        android:layout_width="289dp"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="12dp"
                        android:backgroundTint="@color/white"
                        android:isScrollContainer="true"
                        android:text="0"
                        android:textColor="#000"
                        android:textSize="30sp"
                        app:cornerRadius="15sp" />

                    <Button
                        android:id="@+id/btn_add"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:isScrollContainer="true"
                        android:onClick="setOperateur"
                        android:text="+"
                        android:textColor="#FFF"
                        android:textSize="28sp"
                        app:cornerRadius="15sp" />
                </LinearLayout>

            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">

                    <Button
                        android:id="@+id/btn_AC"
                        android:layout_width="185dp"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="12dp"
                        android:isScrollContainer="true"
                        android:text="AC"
                        android:textColor="@color/white"
                        android:textSize="30sp"
                        app:cornerRadius="15sp" />

                    <Button
                        android:id="@+id/btn_equal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:isScrollContainer="true"
                        android:onClick="Equals"
                        android:text="="
                        android:textColor="#FFF"
                        android:textSize="30sp"
                        app:cornerRadius="15sp" />
                </LinearLayout>

            </TableRow>
        </TableLayout>
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>